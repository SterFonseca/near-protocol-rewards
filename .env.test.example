# .env.test.example
# Copy this file to .env.test and fill in your values

# GitHub Configuration
# For running integration tests, replace with a valid GitHub token
# Unit tests will work without a token as they use mocks
GITHUB_TOKEN=your_github_token_here
TEST_GITHUB_REPO=your-org/your-repo

# Test Configuration
LOG_LEVEL=debug
ENABLE_API_MOCKING=true
SKIP_VALIDATION=false
SKIP_INTEGRATION_TESTS=true  # Set to false to run integration tests

# Database Configuration (if needed)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=near_rewards_test
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password 