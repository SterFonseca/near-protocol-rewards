{
  "name": "near-protocol-rewards",
  "version": "0.1.0-beta",
  "description": "NEAR Protocol Rewards SDK - Track and reward developer contributions through GitHub metrics",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:compile": "tsc -p tsconfig.test.json --noEmit",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "docs": "typedoc --out docs/api src/index.ts",
    "test:unit": "jest \"tests/unit/.*\\.test\\.ts$\""
  },
  "keywords": [
    "near",
    "near-protocol",
    "github",
    "metrics",
    "rewards",
    "contributions",
    "analytics",
    "developer-tools"
  ],
  "author": "NEAR Protocol",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "dotenv": "^16.3.0",
    "events": "^3.3.0",
    "express": "^4.18.0",
    "pg": "^8.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbarnes850/near-protocol-rewards.git"
  },
  "bugs": {
    "url": "https://github.com/jbarnes850/near-protocol-rewards/issues"
  },
  "homepage": "https://github.com/jbarnes850/near-protocol-rewards#readme",
  "publishConfig": {
    "access": "public"
  }
}
